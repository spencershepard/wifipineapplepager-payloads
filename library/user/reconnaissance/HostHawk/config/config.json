{
  "payloads": [
    {
      "name": "Quick Hosts Scan",
      "path": "user/reconnaissance/Quick_Hosts_Scan",
      "command": "nmap -sn -PR $TARGET_SUBNET -T$TIMING --max-retries $MAX_RETRIES --min-rate=$MIN_RATE -n",
      "required_vars": ["TARGET_SUBNET"],
      "optional_vars": {
        "TIMING": "5",
        "MAX_RETRIES": "1",
        "MIN_RATE": "1000"
      },
      "required_packages": [],
      "description": "Fast host discovery scan on target subnet using ARP ping (local network)",
      "author": "HostHawk"
    },
    {
      "name": "Top Ports Scan",
      "path": "user/reconnaissance/Quick_Port_Scan",
      "command": "nmap -sS --top-ports $NUM_PORTS -T$TIMING --max-retries $MAX_RETRIES --min-rate=$MIN_RATE -n $TARGET_IP",
      "required_vars": ["TARGET_IP"],
      "optional_vars": {
        "NUM_PORTS": "100",
        "TIMING": "5",
        "MAX_RETRIES": "0",
        "MIN_RATE": "1000"
      },
      "required_packages": [],
      "description": "Quick SYN port scan on most common ports",
      "author": "HostHawk"
    },
    {
      "name": "Full Port Scan",
      "path": "user/reconnaissance/Full_Port_Scan",
      "command": "nmap -sS -p- $TARGET_IP -T$TIMING --max-retries $MAX_RETRIES --min-rate=$MIN_RATE -n -oN /tmp/hosthawk_fullscan_$TARGET_IP.txt",
      "required_vars": ["TARGET_IP"],
      "optional_vars": {
        "TIMING": "5",
        "MAX_RETRIES": "1",
        "MIN_RATE": "5000"
      },
      "required_packages": [],
      "description": "Fast comprehensive SYN scan of all 65535 TCP ports",
      "author": "HostHawk"
    },
    {
      "name": "Service Version Detection",
      "path": "user/reconnaissance/Service_Detection",
      "command": "nmap -sS -sV $PORT_ARGS $TARGET_IP -T$TIMING --version-intensity $VERSION_INTENSITY --min-rate=$MIN_RATE -n -oN /tmp/hosthawk_services_$TARGET_IP.txt",
      "required_vars": ["TARGET_IP"],
      "optional_vars": {
        "PORT_ARGS": "--top-ports 100",
        "TIMING": "4",
        "VERSION_INTENSITY": "2",
        "MIN_RATE": "500"
      },
      "required_packages": [],
      "description": "Detect service versions with light probing intensity",
      "author": "HostHawk"
    },
    {
      "name": "OS Detection",
      "path": "user/reconnaissance/OS_Detection",
      "command": "nmap -sS -O $TARGET_IP -T$TIMING --osscan-guess --max-retries $MAX_RETRIES -n -oN /tmp/hosthawk_os_$TARGET_IP.txt",
      "required_vars": ["TARGET_IP"],
      "optional_vars": {
        "TIMING": "4",
        "MAX_RETRIES": "2"
      },
      "required_packages": [],
      "description": "Detect operating system and version of target host",
      "author": "HostHawk"
    },
    {
      "name": "UDP Port Scan",
      "path": "user/reconnaissance/UDP_Scan",
      "command": "nmap -sU $PORT_ARGS $TARGET_IP -T$TIMING --max-retries $MAX_RETRIES -n -oN /tmp/hosthawk_udp_$TARGET_IP.txt",
      "required_vars": ["TARGET_IP"],
      "optional_vars": {
        "PORT_ARGS": "--top-ports 20",
        "TIMING": "4",
        "MAX_RETRIES": "0"
      },
      "required_packages": [],
      "description": "Scan most common UDP ports (UDP scanning is inherently slow)",
      "author": "HostHawk"
    }
  ]
}
